{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "types": ["vitest/globals", "vitest/importMeta", "node"],
    /*"paths": {
      "@ts-messaging/client": ["packages/client/src/index.ts"],
      "@ts-messaging/client-kafka": ["packages/client-kafka/src/index.ts"],
      "@ts-messaging/common": ["packages/common/src/index.ts"],
      "@ts-messaging/core": ["packages/core/src/index.ts"],
      "@ts-messaging/registry": ["packages/registry/src/index.ts"],
      "@ts-messaging/registry-confluent": ["packages/registry-confluent/src/index.ts"],
      "@ts-messaging/schema": ["packages/schema/src/index.ts"],
      "@ts-messaging/schema-avro": ["packages/schema-avro/src/index.ts"],
    }*/
  },
  "exclude": ["node_modules", "tmp", "dist", ".vscode"]
}
